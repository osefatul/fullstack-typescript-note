{
  "compilerOptions": {
    "target": "es2016",                                  
    "outDir": "./build",                                 
    "module": "commonjs",                                
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],                                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"]
}